# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of origins to block
ORIGIN_BLACKLIST=

# Comma-separated list of origins to allow (empty = allow all)
ORIGIN_WHITELIST=

# Comma-separated list of proxy hosts to allow
# Example: ALLOWED_PROXY_HOSTS=api.example.com,cdn.example.net
ALLOWED_PROXY_HOSTS=

# Require Origin or X-Requested-With header (true/false)
# Set to true to prevent casual browsing, false to allow direct browser access
REQUIRE_HEADER=false
